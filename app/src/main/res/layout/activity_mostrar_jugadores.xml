<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarJugadoresActivity"
    android:background="@color/fondo">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJugadores"
        android:layout_width="372dp"
        android:layout_height="600dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddJugador"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/choplinmedium"
        android:onClick="addJugador"
        android:text="NUEVO JUGADOR"
        app:layout_constraintEnd_toEndOf="@+id/rvJugadores"
        app:layout_constraintStart_toStartOf="@+id/rvJugadores"
        app:layout_constraintTop_toBottomOf="@+id/rvJugadores" />

    <Spinner
        android:id="@+id/spEquiposMostrarJugadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMostrarJugadores"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/search"
        android:onClick="mostrarJugadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spEquiposMostrarJugadores"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>